<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.LocationSearch">



    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Select One : "
                android:layout_marginLeft="@dimen/_6sdp"
                android:fontFamily="serif"
                android:textSize="@dimen/_16ssp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

           <!--Second card view-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RadioGroup
                android:id="@+id/SerachRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                >

                <RadioButton
                    android:id="@+id/radio_GhonaPara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="GhonaPara" />

                <RadioButton
                    android:id="@+id/radio_University"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="University" />


                <RadioButton
                    android:id="@+id/radio_VCResidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="VC Residence" />

                <RadioButton
                    android:id="@+id/radio_SobhanSorok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Sobhan Sorok" />

                <RadioButton
                    android:id="@+id/radio_Sonakor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Sonakor" />

                <RadioButton
                    android:id="@+id/radio_CircuitHouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Circuit House" />

                <RadioButton
                    android:id="@+id/radio_LGDMOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="LGD MOR" />

                <RadioButton
                    android:id="@+id/radio_Nobinbag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Nobinbag" />

                <RadioButton
                    android:id="@+id/radio_AncharMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Anchar Math" />

                <RadioButton
                    android:id="@+id/radio_Pacuriya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Pacuriya" />

                <RadioButton
                    android:id="@+id/radio_GopalganjSohor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Gopalganj Sohor" />

                <RadioButton
                    android:id="@+id/radio_Others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="@dimen/_14ssp"
                    android:buttonTint="#000"
                    android:text="Others" />
            </RadioGroup>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_15sdp"
    >


        <Button
            android:id="@+id/btnSumitSErach"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp"
            android:backgroundTint="#337AF1"
            android:textAllCaps="false" />




    <TextView
        android:id="@+id/tv_SearchAnotherWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:fontFamily="serif"
        android:textColor="#000"
        android:text="Search Another Way"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>

    </LinearLayout>


    </ScrollView>

</LinearLayout>
